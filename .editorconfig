


# Basic .editorconfig file use to keep formatting consistent





# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Kotlin files
[*.kt]
indent_size = 4

# Java files (if any)
[*.java]
indent_size = 4

# XML files (layouts, manifests)
[*.xml]
indent_size = 2

# Gradle build files
[*.gradle]
indent_size = 2

# Markdown/Readme
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# YAML/JSON (optional)
[*.{yml,yaml,json}]
indent_size = 2
